#!C:/Program\ Files/Git/usr/bin/sh.exe
echo "----------------------------------------------------------------------------------------------------------------------------------------------------------------------"
echo "-                                                                                                                                                                    -"
echo "-   STARTING git pre-commit hook in windows                                                                                                                          -"
echo "-                                                                                                                                                                    -"
echo "----------------------------------------------------------------------------------------------------------------------------------------------------------------------"

echo "************************************* Running lint debug check *******************************************************************************************************"
./gradlew lintDebug

echo "************************************* Running ktlint check ***********************************************************************************************************"
./gradlew ktlintCheck --daemon

RESULT=$?

# return 1 exit code if running checks fails
[ $RESULT -ne 0 ] && exit 1
exit 0
